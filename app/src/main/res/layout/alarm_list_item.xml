<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal">

    <Switch android:id="@+id/alarm_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            app:layout_constraintBaseline_toBaselineOf="@+id/alarm_time_view"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/alarm_time_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/fab_margin"
            android:textSize="@dimen/alarm_list_item_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/alarm_switch"/>

</android.support.constraint.ConstraintLayout>